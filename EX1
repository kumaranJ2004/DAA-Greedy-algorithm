#include<stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    int sum=0;
    int x=n/1000;
    sum+=x;
    n=n%1000;
    x=n/500;
    sum+=x;
    n=n%500;
    x=n/100;
    sum+=x;
    n=n%100;
    x=n/50;
    sum+=x;
    n=n%50;
    x=n/20;
    sum+=x;
    n=n%20;
    x=n/10;
    sum+=x;
    n=n%10;
    x=n/5;
    sum+=x;
    n=n%5;
    x=n/2;
    sum+=x;
    n=n%2;
    sum+=n;
    printf("%d",sum);
    
}
