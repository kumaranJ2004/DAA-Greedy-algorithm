#include<stdio.h>
int main(){
    int b;
    scanf("%d",&b);
    int arr[b];
    for(int i=0;i<b;i++){
        scanf("%d",&arr[i]);
    }
    int i=0,d=0;
    while(i<(b-1)){
        if(arr[i]<arr[i+1]){
            d=arr[i+1];
            arr[i+1]=arr[i];
            arr[i]=d;
            i=0;
            continue;
        }i++;
    }
    int c=0,s=0;
    for(int j=0;j<b;j++){
        s=1;
        for(int k=0;k<j;k++){
            s=s*b;
        }
        ;;
        c=c+(s*arr[j]);
    }printf("%d",c);
}
